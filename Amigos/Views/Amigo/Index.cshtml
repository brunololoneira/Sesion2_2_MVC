@model IEnumerable<Amigos.Models.TuProyecto.Models.Amigo>

@{
    ViewData["Title"] = localizer["Friend Locator"];
}

<h2 class="text-center">@localizer["Friend Locator"]</h2>
<p class="text-center text-muted">@localizer["Manage your friend list and their locations."]</p>

<div class="container">
    <div class="row">
        <!-- Mapa -->
        <div class="col-md-6">
            <h3>@localizer["Map"]</h3>
            <p>@localizer["A map with your friends' locations will be displayed here."]</p>
            <div style="width: 100%; height: 400px; background-color: #f1f3f5; text-align: center; line-height: 400px; border-radius: 10px; border: 1px solid #ced4da;">
                <strong>@localizer["MAP (Example)"]</strong>
            </div>
        </div>

        <!-- Lista de amigos -->
        <div class="col-md-6">
            <h3>@localizer["Friend List"]</h3>
            <a asp-action="Create" class="btn btn-success mb-3">➕ @localizer["Add Friend"]</a>
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Longi)</th>
                        <th>@Html.DisplayNameFor(model => model.Lati)</th>
                        <th>@localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Longi)</td>
                                <td>@Html.DisplayFor(modelItem => item.Lati)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info btn-sm">✏️ @localizer["Edit"]</a>
                                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-secondary btn-sm">🔍 @localizer["Details"]</a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">🗑️ @localizer["Delete"]</a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
