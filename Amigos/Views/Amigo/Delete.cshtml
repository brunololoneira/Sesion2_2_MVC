@model Amigos.Models.TuProyecto.Models.Amigo

@{
    ViewData["Title"] = localizer["Delete"];
}

<h1>@localizer["Delete"]</h1> <!-- Traducido dinámicamente -->

<h3>@localizer["AreYouSure"]</h3> <!-- Traducido dinámicamente -->

<div>
    <h4>@localizer["Amigo"]</h4> <!-- Traducido dinámicamente -->
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @localizer["Name"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @localizer["Longitude"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Longi)
        </dd>
        <dt class="col-sm-2">
            @localizer["Latitude"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lati)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="@localizer["Delete"]" class="btn btn-danger" /> <!-- Traducido dinámicamente -->
        <a asp-action="Index">@localizer["BackToList"]</a> <!-- Traducido dinámicamente -->
    </form>
</div>
