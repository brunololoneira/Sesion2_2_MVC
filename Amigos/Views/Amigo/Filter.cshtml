@{
    ViewData["Title"] = "Filtrar por distancia";
}

<h1>Filtrar Amigos por Distancia</h1>

<form method="get" asp-action="FilterResults">
    <div class="form-group">
        <label for="longitude">Longitud</label>
        <input type="number" step="any" id="longitude" name="longitude" class="form-control" />
    </div>
    <div class="form-group">
        <label for="latitude">Latitud</label>
        <input type="number" step="any" id="latitude" name="latitude" class="form-control" />
    </div>
    <div class="form-group">
        <label for="distance">Distancia (km)</label>
        <input type="number" step="any" id="distance" name="distance" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver a la lista de Amigos</a>
</div>
